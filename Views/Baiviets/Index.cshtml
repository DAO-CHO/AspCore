@model IEnumerable<shophoatuoi.Models.Baiviet>

@{
    ViewData["Title"] = "Index";
}
<div class="animated fadeIn">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <div class="card-header" style="font-family:'Times New Roman', Times, serif; font-size:30px ;width: 50%; margin: 0px auto; text-align:center;">
                        <strong class="card-title">Danh Sách Bài Viết - <a asp-action="Create" style="color: deeppink;">Tạo Mới</a></strong>
                    </div>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                        <thead>
                                            <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.BvMa)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.BvTen)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.BvNoidung)
                                                </th>
                                                <th style="width: 80px"></th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.BvMa)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.BvTen)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.BvNoidung)
                                                </td>
                                                <td>
                                                        <a asp-action="Edit" asp-route-id="@item.BvMa"class="btn bg-orange waves-effect"><i class="material-icons">build</i></a>
														<a asp-action="Delete" asp-route-id="@item.BvMa"class="btn bg-red waves-effect"><i class="material-icons">delete</i></a>
													</td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
