@model shophoatuoi.Models.Chitietchude

@{
    ViewData["Title"] = "Create";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">           
        <div class="body">
            <form asp-controller="CHITIETCHUDEs" asp-action="Create" method="post" class="form-horizontal" style="font-family:'Times New Roman', Times, serif;">
                <div class="row clearfix" style="font-family:'Times New Roman', Times, serif; width: 50%; margin: 0px auto; text-align:center;">
                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                        <h3>
                            Tạo Mới Chi Tiết Chủ Đề
                        </h3>
                    </div>
                </div>
               <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label>Mã</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                        <div class="form-line">
                                <input asp-for="CtcdMa" type="text" class="form-control"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label asp-for="CdMa">Chủ Đề</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <select asp-for="CdMa" class ="form-control" asp-items="ViewBag.CdTen"></select>
                            </div>
                        </div>
                    </div>
                </div>

            
                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label>Sản Phẩm</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <input asp-for="SpMa" class="form-control" value="@ViewBag.SpMa" readonly="readonly"/>
                                
                            </div>
                        </div>
                    </div>
                </div>


                
                  <div class="row clearfix" style="width: 50%; margin: 0px auto; text-align:center;">
                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                        <input type="submit" value="Tạo Mới" class="btn btn-danger" />
                        <button type="button" class=" btn btn-primary">  <a asp-action="Index" asp-route-id="@ViewBag.SpMa">Quay Trở Lại</a></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>