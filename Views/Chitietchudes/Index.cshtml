@model IEnumerable<shophoatuoi.Models.Chitietchude>

@{
    ViewData["Title"] = "Index";
}

<div class="animated fadeIn">
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <div class="card-header" style="font-family:'Times New Roman', Times, serif; font-size:30px ;width: 50%; margin: 0px auto; text-align:center;">
                        <strong class="card-title">Chi Tiết Chủ Đề - <a asp-action="Create" asp-route-id="@ViewBag.SpMa" style="color: deeppink;">Tạo Mới</a></strong>
                    </div>
                </div>
                     <div class="body">
                    <div class="table-responsive">
                        <div id="DataTables_Table_0_wrapper" class="dataTables_wrapper form-inline dt-bootstrap">
                            <div class="row">
                                <div class="col-sm-12">
                                    <table class="table table-bordered table-striped table-hover js-basic-example dataTable" id="DataTables_Table_0" role="grid" aria-describedby="DataTables_Table_0_info">
                                            <thead>
                                                <tr>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.CtcdMa)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.CdMaNavigation.CdTen)
                                                </th>
                                                <th>
                                                    @Html.DisplayNameFor(model => model.SpMaNavigation.SpTen)
                                                </th>
                                                <th style="width: 115px"></th>
                                            </tr>
                                        </thead>

                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                            <tr>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CtcdMa)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.CdMaNavigation.CdTen)
                                                </td>
                                                <td>
                                                    @Html.DisplayFor(modelItem => item.SpMaNavigation.SpTen)
                                                </td>
                                                <td>
                                                    <a href="@Url.Action("Edit","CHITIETCHUDEs", new { id = item.CtcdMa })" class="btn bg-orange waves-effect"><i class="material-icons">build</i></a>
                                                    <a href="@Url.Action("Delete", "CHITIETCHUDEs", new { id = item.CtcdMa })" class="btn bg-red waves-effect"><i class="material-icons">delete</i></a>
                                                </td>
                                            </tr>
                                        }
                                        </tbody>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div