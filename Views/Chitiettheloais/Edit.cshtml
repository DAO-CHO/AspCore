@model shophoatuoi.Models.Chitiettheloai

@{
    ViewData["Title"] = "Edit";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">           
        <div class="body">
            <form asp-controller="CHITIETTHELOAIs" asp-action="Edit" method="post" class="form-horizontal" style="font-family:'Times New Roman', Times, serif;">
                <div class="row clearfix" style="font-family:'Times New Roman', Times, serif; width: 50%; margin: 0px auto; text-align:center;">
                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                        <h3>
                            Cập Nhật Chi Tiết Thể Loại
                        </h3>
                    </div>
                </div>

                
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="CttlMa" />


            <div class="row clearfix">
                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                    <label for="TlMa">Thể Loại</label>
                </div>
                <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                   <div class="form-group">
                   <div class="form-line">
                <select asp-for="TlMa" class="form-control" asp-items="ViewBag.TlMa"></select>
                <span asp-validation-for="TlMa" class="text-danger"></span>
                </div>
            </div>


            <div class="row clearfix">
                <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                    <label for="SpMa">Mã Sản Phẩm</label>
                </div>
                <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                   <div class="form-group">
                   <div class="form-line">
                <select asp-for="SpMa" class="form-control" asp-items="ViewBag.SpMa"></select>
                <span asp-validation-for="SpMa" class="text-danger"></span>
               </div>
            </div>



          <div class="row clearfix" style="width: 50%; margin: 0px auto; text-align:center;">
                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                        <input type="submit" value="Lưu" class="btn btn-danger" />
                        <button type="button" class=" btn btn-primary">  <a asp-action="Index">Quay Trở Lại</a> </button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
