@model shophoatuoi.Models.Chitiethoadon

@{
    ViewData["Title"] = "Create";
}
<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">           
        <div class="body">
            <form asp-controller="Chitiethoadons" asp-action="Create" asp-route-id="@ViewBag.HdMa" method="post" class="form-horizontal" style="font-family:'Times New Roman', Times, serif;">
                <div class="row clearfix" style="font-family:'Times New Roman', Times, serif; width: 50%; margin: 0px auto; text-align:center;">
                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                        <h3>
                            Tạo Mới Chi Tiết Hóa Đơn
                        </h3>
                    </div>
                </div>
                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label>Mã</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <input asp-for="CthdMa" type="text" class="form-control"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label>Sản Phẩm</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <select asp-for="SpMa" class="form-control show-tick" asp-items="ViewBag.SpTen"></select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label>Hóa Đơn</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <input asp-for="HdMa" class="form-control" value="@ViewBag.HdMa" readonly="readonly"/>
                                
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label for="KhMa">Khách Hàng</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <select asp-for="KhMa" class="form-control show-tick" asp-items="ViewBag.KhTen"></select>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label for="CthdSoluong">Số Lượng </label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <input asp-for="CthdSoluong" type="number" min="1" class="form-control"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label for="CthdTamtinh">Tạm Tính</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <input asp-for="CthdTamtinh" type="number" min="0" class="form-control"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label for="CthdPhigiaohang">Phí Giao Hàng</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <input asp-for="CthdPhigiaohang" type="number" min="0" class="form-control"/>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="row clearfix">
                    <div class="col-lg-2 col-md-2 col-sm-4 col-xs-5 form-control-label">
                        <label for=" CthdThanhtien">Thành Tiền</label>
                    </div>
                    <div class="col-lg-10 col-md-10 col-sm-8 col-xs-7">
                        <div class="form-group">
                            <div class="form-line">
                                <input asp-for=" CthdThanhtien" type="number" min="0" class="form-control"/>
                            </div>
                        </div>
                    </div>
                </div>
               
                <div class="row clearfix" style="width: 50%; margin: 0px auto; text-align:center;">
                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                        <input type="submit" value="Tạo Mới" class="btn btn-danger" />
                        <button type="button" class=" btn btn-primary">  <a asp-action="Index">Quay Trở Lại</a></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

