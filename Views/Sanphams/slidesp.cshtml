@model IEnumerable<shophoatuoi.Models.Sanpham>
<!-- Slider AREA -->
<div class="slider-area">
    <div class="container">
        <div class="row">
            <div class="col-md-3 col-sm-3">
                <div class="slider-left">
                    <h2>Sản Phẩm Hôm Nay</h2>
                    <div id="owl-slider-left" class="owl-carousel">
                        @foreach (var item in Model)
                        {
                           <div class="slider-left-carousel">
                                <div class="slider-left-product">
                                    <a href="#"><img src="@Html.DisplayFor(modelItem => item.Hinhanh.HaUrl)" alt="product"></a>
                                    <div class="slider-product-button">
                                        <p class="add-chart"><a href="#">Thêm Vào Giỏ Hàng</a></p>
                                    </div>
                                </div>
                                <p class="view-details"><a href="#" style="background-color: hotpink;">Xem Chi Tiết</a></p>
                            </div>
                        }
                            <div class="slider-left-carousel">
                                <div class="slider-left-product">
                                    <a href="#"><img src="~/TemplatessSanPham/img/hoa3.jpg" alt="product"></a>
                                    <div class="slider-product-button">
                                        <p class="add-chart"><a href="#">Thêm Vào Giỏ Hàng</a></p>
                                    </div>
                                </div>
                                <p class="view-details"><a href="#" style="background-color: hotpink;">Xem Chi Tiết</a></p>
                            </div>
                        </div>
                </div>
            </div>
            <div class="col-md-9 col-sm-9">
                <!-- Main Slider -->
                <div class="main-slider">
                    <div class="slider">
                        <div id="mainSlider" class="nivoSlider slider-image">
                            <img src="~/TemplatessSanPham/img/chuong.jpg" alt="main slider" title="#htmlcaption1" />
                            <img src="~/TemplatessSanPham/img/hoa2.jpg" alt="main slider" title="#htmlcaption2" />
                        </div>
                        <div id="htmlcaption1" class="nivo-html-caption slider-caption-1">
                            <div class="slider-progress"></div>
                            <div class="slide-text">
                                <div class="middle-text">
                                    <div class="cap-title wow slideInRight" data-wow-duration=".9s" data-wow-delay="0s">

                                    </div>
                                    <div class="cap-dec wow slideInRight" data-wow-duration="1.1s" data-wow-delay="0s">

                                    </div>
                                    <div class="cap-readmore animated bounceIn" data-wow-duration="1.5s" data-wow-delay=".5s">

                                    </div>
                                </div>
                            </div>
                            <div class="slide-image">
                                <img class="wow slideInUp" data-wow-duration="1.5s" data-wow-delay="0s" src="~/TemplatessSanPham/img/chuong.jpg" alt="slider caption" />
                            </div>
                        </div>
                        <div id="htmlcaption2" class="nivo-html-caption slider-caption-2">
                            <div class="slider-progress"></div>
                            <div class="slide-text">
                                <div class="middle-text">
                                    <div class="cap-title wow slideInRight" data-wow-duration=".9s" data-wow-delay="0s">

                                    </div>
                                    <div class="cap-dec wow slideInRight" data-wow-duration="1.1s" data-wow-delay="0s">

                                    </div>
                                    <div class="cap-readmore animated bounceIn" data-wow-duration="1.5s" data-wow-delay=".5s">

                                    </div>
                                </div>
                            </div>
                            <div class="slide-image slide2-image">
                                <img class="wow slideInUp" data-wow-duration="1.5s" data-wow-delay="0s" src="~/TemplatessSanPham/img/hoa2.jpg" alt="slider caption" />
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Product AREA -->
