@model shophoatuoi.Models.Chucvu

@{
    ViewData["Title"] = "Delete";
}

<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
    <div class="card">           
        <div class="body">
            <form asp-controller="CHUCVUs" asp-action="Delete" method="post" class="form-horizontal" style="font-family:'Times New Roman', Times, serif;">
                <div class="row clearfix" style="font-family:'Times New Roman', Times, serif; width: 50%; margin: 0px auto; text-align:center;">
                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                        <h3>
                            Bạn Có Muốn Xóa Chức Vụ <b>"@Html.DisplayFor(model => model.CvTen)"</b> ?
                        </h3>
                    </div>
                </div>
                
                <div class="row clearfix" style="width: 50%; margin: 0px auto; text-align:center;">
                    <div class="col-lg-offset-2 col-md-offset-2 col-sm-offset-4 col-xs-offset-5">
                        <input type="submit" value="Xóa" class="btn btn-danger" />
                        <button type="button" class=" btn btn-primary">  <a asp-action="Index">Quay Trở Lại</a></button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
